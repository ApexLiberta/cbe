{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Steam Game Data",
	"type": "object",
	"properties": {
		"name": {
			"type": "string",
			"description": "Name of the game"
		},
		"version": {
			"type": "number",
			"description": "Version of the scraper"
		},
		"gistId": {
			"type": "string",
			"description": "Optional Gist ID for the scraper code"
		},
		"matches": {
			"type": "string",
			"description": "URL pattern to match game pages"
		},
		"selectors": {
			"type": "object",
			"description": "Selectors for extracting game data",
			"properties": {
				"name": {
					"type": "object",
					"properties": {
						"selector": {
							"type": "string",
							"description": "CSS selector for the game name"
						},
						"type": {
							"type": "string",
							"enum": ["text"]
						}
					},
					"required": ["selector", "type"]
				},
				"description": {
					"type": "object",
					"properties": {
						"selector": {
							"type": "string",
							"description": "CSS selector for the game description"
						},
						"type": {
							"type": "string",
							"enum": ["text"]
						}
					},
					"required": ["selector", "type"]
				},
				"releaseDate": {
					"type": "object",
					"properties": {
						"selector": {
							"type": "string",
							"description": "CSS selector for the game release date"
						},
						"type": {
							"type": "string",
							"enum": ["text"]
						}
					},
					"required": ["selector", "type"]
				},
				"developers": {
					"type": "object",
					"properties": {
						"selector": {
							"type": "string",
							"description": "CSS selector for the developer(s)"
						},
						"type": {
							"type": "string",
							"enum": ["link"]
						}
					},
					"required": ["selector", "type"]
				},
				"publishers": {
					"type": "object",
					"properties": {
						"selector": {
							"type": "string",
							"description": "CSS selector for the publisher(s)"
						},
						"type": {
							"type": "string",
							"enum": ["link"]
						}
					},
					"required": ["selector", "type"]
				},
				"tags": {
					"type": "object",
					"properties": {
						"selector": {
							"type": "string",
							"description": "CSS selector for the game tags"
						},
						"type": {
							"type": "string",
							"enum": ["link"]
						}
					},
					"required": ["selector", "type"]
				}
			},
			"required": [
				"name",
				"description",
				"releaseDate",
				"developers",
				"publishers",
				"tags"
			]
		}
	},
	"required": ["name", "version", "matches", "selectors"]
}
