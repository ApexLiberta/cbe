{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Main Schema",
	"type": "object",
	"properties": {
		"name": {
			"type": "string",
			"description": "Name of the game"
		},
		"version": {
			"type": "number",
			"description": "Version of the scraper"
		},
		"gistId": {
			"type": "string",
			"description": "Optional Gist ID for the scraper code"
		},
		"matches": {
			"type": "string",
			"description": "URL pattern to match game pages"
		},
		"selectors": {
			"$ref": "./sels.sch.json"
		}
	},
	"required": ["name", "version", "matches", "selectors"]
}
